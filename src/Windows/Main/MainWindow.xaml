<Window x:Class="ScreenTranslation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenTranslation"
        mc:Ignorable="d"
        Title="Screen Translator" 
        Height="665" Width="1050"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="#CC000000"
        Topmost="False"
        Icon="/media/AppIcon.ico">
    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="15" CaptionHeight="10" GlassFrameThickness="0" UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
      
    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#44FFFFFF"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3E3E42"/>
                                <Setter Property="BorderBrush" Value="#88FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF007ACC"/>
                                <Setter Property="BorderBrush" Value="#AAFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="30"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE81123"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Background="#CC101010">
        <!-- Main border for resizing -->
        <Border Name="MainBorder" BorderThickness="1" BorderBrush="#3FFFFFFF" Background="#CC101010" CornerRadius="6">
            <Grid>
                <!-- Top control bar with dedicated resize area -->
                <Grid Height="60" VerticalAlignment="Top">
                    <!-- Top resize strip - 10px height -->
                    <Border Height="10" VerticalAlignment="Top" Background="Transparent" Cursor="SizeNS"
                           WindowChrome.IsHitTestVisibleInChrome="False"/>
                    
                    <!-- Actual header with content - shifted down by 10px -->
                    <Border Name="HeaderBorder" Background="#CC1E1E1E" Margin="0,10,0,0" CornerRadius="6,6,0,0"
                            MouseLeftButtonDown="Header_MouseLeftButtonDown"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                    <Grid>
                        <TextBlock Text="Game Translation Tool" Visibility="Collapsed"
                                  Foreground="White" FontWeight="Bold" FontSize="16"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                                     Margin="10,0" VerticalAlignment="Center"
                                     WindowChrome.IsHitTestVisibleInChrome="True">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">

                                <!-- Core Translation Functions Group -->
                                <TextBlock Foreground="#FF00AAFF" FontSize="12" FontWeight="Bold"
                                          Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <Button x:Name="toggleButton" Content="▶ Start" Style="{StaticResource ModernButton}"
                                        Background="#FF14B414" BorderBrush="#FF00AA44"
                                        Click="OnStartButtonToggleClicked" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <Button x:Name="monitorButton" Content="📺 Overlay" Style="{StaticResource ModernButton}"
                                        Background="#FF4569B0" BorderBrush="#FF0044AA"
                                        Click="MonitorButton_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <Button x:Name="chatBoxButton" Content="💬 ChatBox" Style="{StaticResource ModernButton}"
                                        Background="#FF45B069" BorderBrush="#FF00AA44"
                                        Click="ChatBoxButton_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <!-- Separator -->
                                <Border Width="2" Background="#66FFFFFF" Margin="8,2"/>

                                <!-- Area Selection Group -->
                                <TextBlock Foreground="#FF00AAFF" FontSize="12" FontWeight="Bold"
                                          Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <Button x:Name="selectAreaButton" Content="✂ Select" Style="{StaticResource ModernButton}"
                                        Background="#FFB07D45" BorderBrush="#FFAA4400"
                                        Click="SelectAreaButton_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <Button x:Name="showAreaButton" Content="👁 Show" Style="{StaticResource ModernButton}"
                                        Background="#FF9945B0" BorderBrush="#FF6600AA"
                                        Click="ShowAreaButton_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <Button x:Name="btnClearSelectionArea" Content="🗑 Clear" Style="{StaticResource ModernButton}"
                                        Background="#FF4577B0" BorderBrush="#FF0044AA"
                                        Click="btnClearSelectionArea_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <!-- Separator -->
                                <Border Width="2" Background="#66FFFFFF" Margin="8,2"/>

                                <!-- OCR Management Group -->
                                <TextBlock Foreground="#FF00AAFF" FontSize="12" FontWeight="Bold"
                                          Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <Button x:Name="btnStartOcrServer" Content="▶ Start" Style="{StaticResource ModernButton}"
                                        Background="#FF14B414" BorderBrush="#FF00AA44"
                                        Click="btnStartOcrServer_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <Button x:Name="btnStopOcrServer" Content="⏹ Stop" Style="{StaticResource ModernButton}"
                                        Background="#FFDC3545" BorderBrush="#FFAA0000"
                                        Click="btnStopOcrServer_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <!-- Separator -->
                                <Border Width="2" Background="#66FFFFFF" Margin="8,2"/>

                                <!-- Settings & Tools Group -->
                                <TextBlock Foreground="#FF00AAFF" FontSize="12" FontWeight="Bold"
                                          Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <Button x:Name="settingsButton" Content="⚙ Settings" Style="{StaticResource ModernButton}"
                                        Background="#FF6C757D" BorderBrush="#FF444444"
                                        Click="SettingsButton_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <Button x:Name="logButton" Content="📋 Log" Style="{StaticResource ModernButton}"
                                        Background="#FF9945B0" BorderBrush="#FF6600AA"
                                        Click="LogButton_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <!-- Hidden elements for settings synchronization -->
                                <Button x:Name="hideButton" Content="Hide" Style="{StaticResource ModernButton}"
                                        Background="#FF5F5F5F" Visibility="Collapsed"
                                        Click="HideButton_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <Button x:Name="listenButton" Content="Listen" Style="{StaticResource ModernButton}"
                                        Background="#FF4577B0" Visibility="Collapsed"
                                        Click="ListenButton_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <!-- Hidden Language ComboBoxes (for settings synchronization) -->
                                <ComboBox x:Name="sourceLanguageComboBox" Width="0" Height="0" Margin="0" Visibility="Collapsed"
                                          WindowChrome.IsHitTestVisibleInChrome="True"
                                          SelectionChanged="SourceLanguageComboBox_SelectionChanged">
                                    <ComboBoxItem Content="ja"/>
                                    <ComboBoxItem Content="en"/>
                                    <ComboBoxItem Content="ch_sim"/>
                                    <ComboBoxItem Content="ch_tra"/>
                                    <ComboBoxItem Content="ko"/>
                                    <ComboBoxItem Content="vi"/>
                                    <ComboBoxItem Content="fr"/>
                                    <ComboBoxItem Content="ru"/>
                                    <ComboBoxItem Content="de"/>
                                    <ComboBoxItem Content="es"/>
                                    <ComboBoxItem Content="it"/>
                                    <ComboBoxItem Content="hi"/>
                                    <ComboBoxItem Content="pt"/>
                                    <ComboBoxItem Content="ar"/>
                                    <ComboBoxItem Content="nl"/>
                                    <ComboBoxItem Content="pl"/>
                                    <ComboBoxItem Content="ro"/>
                                    <ComboBoxItem Content="fa"/>
                                    <ComboBoxItem Content="cs"/>
                                    <ComboBoxItem Content="id"/>
                                    <ComboBoxItem Content="th"/>
                                    <ComboBoxItem Content="ch_tra"/>
                                </ComboBox>
                                <ComboBox x:Name="targetLanguageComboBox" Width="0" Height="0" Margin="0" Visibility="Collapsed"
                                          WindowChrome.IsHitTestVisibleInChrome="True"
                                          SelectionChanged="TargetLanguageComboBox_SelectionChanged">
                                    <ComboBoxItem Content="ja"/>
                                    <ComboBoxItem Content="en"/>
                                    <ComboBoxItem Content="ch_sim"/>
                                    <ComboBoxItem Content="ch_tra"/>
                                    <ComboBoxItem Content="ko"/>
                                    <ComboBoxItem Content="vi"/>
                                    <ComboBoxItem Content="fr"/>
                                    <ComboBoxItem Content="ru"/>
                                    <ComboBoxItem Content="de"/>
                                    <ComboBoxItem Content="es"/>
                                    <ComboBoxItem Content="it"/>
                                    <ComboBoxItem Content="hi"/>
                                    <ComboBoxItem Content="pt"/>
                                    <ComboBoxItem Content="ar"/>
                                    <ComboBoxItem Content="nl"/>
                                    <ComboBoxItem Content="pl"/>
                                    <ComboBoxItem Content="ro"/>
                                    <ComboBoxItem Content="fa"/>
                                    <ComboBoxItem Content="cs"/>
                                    <ComboBoxItem Content="id"/>
                                    <ComboBoxItem Content="th"/>
                                    <ComboBoxItem Content="ch_tra"/>
                                </ComboBox>
                            </StackPanel>
                        </ScrollViewer>
                        
                        <!-- Window Control Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                        
                        <Button x:Name="minimizeButton" Content="&#xE949;" FontFamily="Segoe MDL2 Assets"
                                Width="30" Height="30" Margin="0,0,5,0" Background="Transparent" Foreground="White"
                                BorderThickness="0" 
                                Click="MinimizeButton_Click" WindowChrome.IsHitTestVisibleInChrome="True">
                                <Button.Style>
                                <Style TargetType="Button">
                                        <Setter Property="Template">
                                        <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#44FFFFFF"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                        </Setter.Value>
                                        </Setter>
                                </Style>
                                </Button.Style>
                        </Button>
                        
                        <Button Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" 
                                Width="30" Height="30" Background="Transparent" Foreground="White"
                                BorderThickness="0"
                                Click="CloseButton_Click" WindowChrome.IsHitTestVisibleInChrome="True">
                                <Button.Style>
                                <Style TargetType="Button">
                                        <Setter Property="Template">
                                        <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFE81123"/>
                                                        </Trigger>
                                                </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                        </Setter.Value>
                                        </Setter>
                                </Style>
                                </Button.Style>
                        </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                </Grid>
                
                <!-- UI elements to hide during capture - HIDDEN DURING SCREENSHOT -->
                <Grid Name="OverlayContent" Margin="0,70,0,50">
                <!-- Main content area -->
                <Border Background="#22FFFFFF" CornerRadius="6" Margin="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="10">
                        <Grid>
                                <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/> <!-- Header section -->
                                <RowDefinition Height="Auto"/> <!-- HotKey -->
                                <RowDefinition Height="Auto"/> <!-- Tutorial link section -->
                                </Grid.RowDefinitions>
                                
                                <!-- Header Section with Logo and Version -->
                                <Border Grid.Row="0" Background="#33000000" CornerRadius="6" Margin="0,0,0,15">
                                <Grid Margin="15">
                                        <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Logo Placeholder -->
                                        <Border Grid.Column="0" Width="64" Height="64" CornerRadius="8">
                                                <Image Source="/media/AppIcon.ico" Width="48" Height="48" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <!-- App Title and Version -->
                                        <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <TextBlock Text="ScreenTranslation" FontSize="28" 
                                                FontWeight="Bold" Foreground="#FF00AAFF"/>
                                        <TextBlock Name="AppVersion" Text="Version" Foreground="#AAFFFFFF" FontSize="14" Margin="0,5,0,0"/>
                                        </StackPanel>
                                </Grid>
                                </Border>
                                
                                <!-- Quick Start Section -->
                                <Border Grid.Row="1" Background="#44007ACC" CornerRadius="8" Margin="0,0,0,20" Padding="20" BorderBrush="#66FFFFFF" BorderThickness="1">
                                <Grid>
                                        <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <TextBlock Grid.Column="0" Text="🚀" FontSize="32" VerticalAlignment="Center" Foreground="#FFFFFFFF" Margin="0,0,15,0"/>

                                        <!-- Content -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Get Started" FontSize="20" FontWeight="Bold" Foreground="#FFFFFFFF" Margin="0,0,0,8"/>
                                        <TextBlock Text="Click the button below to access the complete setup guide and start translating!" FontSize="16" Foreground="#DDFFFFFF" TextWrapping="Wrap"/>

                                        <Button x:Name="quickStart" Content="📖 QUICK START GUIDE" FontSize="18" FontWeight="Bold" Foreground="#FFFF6600" Style="{StaticResource ModernButton}"
                                        Background="#FF3E3E42" BorderBrush="#FFFF6600" Margin="0,15,0,0"
                                        Click="QuickStartButton_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>
                                        </StackPanel>
                                </Grid>
                                </Border>

                                <!-- Global Hotkeys Reference -->
                                <Border Grid.Row="2" Background="#33000000" CornerRadius="6" Margin="0,0,0,20" Padding="15">
                                <StackPanel>
                                        <TextBlock Text="Global Hotkeys" FontSize="18" FontWeight="Bold" Foreground="#FF00AAFF" Margin="0,0,0,15"/>

                                        <!-- Main Control Hotkeys -->
                                        <TextBlock Text="Main Controls" FontSize="16" FontWeight="Bold" Foreground="#AAFFFFFF" Margin="0,0,0,10"/>
                                        <UniformGrid Columns="2" Rows="3" Margin="0,0,0,20">
                                                <!-- Start/Stop -->
                                                <Border Background="#4400AA00" CornerRadius="4" Margin="2" Padding="8" BorderBrush="#6600AA00" BorderThickness="1">
                                                        <Border.ToolTip>
                                                                <ToolTip Content="Bật/Tắt chế độ dịch tự động. Khi bật, ứng dụng sẽ tự động chụp màn hình và dịch văn bản."/>
                                                        </Border.ToolTip>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="▶" FontSize="18" VerticalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                        <TextBlock Text="Start/Stop" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF"/>
                                                                        <TextBlock x:Name="hotKeyStartStop" Text="ALT+G" FontSize="10" Foreground="#DDFFFFFF"/>
                                                                </StackPanel>
                                                        </Grid>
                                                </Border>

                                                <!-- Overlay -->
                                                <Border Background="#444569B0" CornerRadius="4" Margin="2" Padding="8" BorderBrush="#664569B0" BorderThickness="1">
                                                        <Border.ToolTip>
                                                                <ToolTip Content="Hiện/Ẩn cửa sổ overlay hiển thị văn bản đã dịch trên màn hình."/>
                                                        </Border.ToolTip>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="📺" FontSize="18" VerticalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                        <TextBlock Text="Overlay" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF"/>
                                                                        <TextBlock x:Name="hotKeyOverlay" Text="ALT+F" FontSize="10" Foreground="#DDFFFFFF"/>
                                                                </StackPanel>
                                                        </Grid>
                                                </Border>

                                                <!-- Settings -->
                                                <Border Background="#446C757D" CornerRadius="4" Margin="2" Padding="8" BorderBrush="#666C757D" BorderThickness="1">
                                                        <Border.ToolTip>
                                                                <ToolTip Content="Mở cửa sổ cài đặt để cấu hình ứng dụng, ngôn ngữ, và các tùy chọn khác."/>
                                                        </Border.ToolTip>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="⚙" FontSize="18" VerticalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                        <TextBlock Text="Settings" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF"/>
                                                                        <TextBlock x:Name="hotKeySetting" Text="ALT+P" FontSize="10" Foreground="#DDFFFFFF"/>
                                                                </StackPanel>
                                                        </Grid>
                                                </Border>

                                                <!-- Log -->
                                                <Border Background="#449945B0" CornerRadius="4" Margin="2" Padding="8" BorderBrush="#669945B0" BorderThickness="1">
                                                        <Border.ToolTip>
                                                                <ToolTip Content="Mở cửa sổ log để xem nhật ký hoạt động và thông tin debug của ứng dụng."/>
                                                        </Border.ToolTip>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="📋" FontSize="18" VerticalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                        <TextBlock Text="Log" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF"/>
                                                                        <TextBlock x:Name="hotKeyLog" Text="ALT+L" FontSize="10" Foreground="#DDFFFFFF"/>
                                                                </StackPanel>
                                                        </Grid>
                                                </Border>

                                                <!-- ChatBox -->
                                                <Border Background="#4445B069" CornerRadius="4" Margin="2" Padding="8" BorderBrush="#6645B069" BorderThickness="1">
                                                        <Border.ToolTip>
                                                                <ToolTip Content="Mở cửa sổ ChatBox để xem lịch sử dịch và tương tác với văn bản đã dịch."/>
                                                        </Border.ToolTip>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="💬" FontSize="18" VerticalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                        <TextBlock Text="ChatBox" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF"/>
                                                                        <TextBlock x:Name="hotKeyChatBox" Text="ALT+C" FontSize="10" Foreground="#DDFFFFFF"/>
                                                                </StackPanel>
                                                        </Grid>
                                                </Border>
                                        </UniformGrid>

                                        <!-- Area Management Hotkeys -->
                                        <TextBlock Text="Area Management" FontSize="16" FontWeight="Bold" Foreground="#AAFFFFFF" Margin="0,0,0,10"/>
                                        <UniformGrid Columns="2" Rows="1" Margin="0,0,0,20">
                                                <!-- Select Area -->
                                                <Border Background="#44B07D45" CornerRadius="4" Margin="2" Padding="8" BorderBrush="#66B07D45" BorderThickness="1">
                                                        <Border.ToolTip>
                                                                <ToolTip Content="Chọn vùng trên màn hình để dịch. Kéo chuột để chọn khu vực cần dịch văn bản."/>
                                                        </Border.ToolTip>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="✂" FontSize="18" VerticalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                        <TextBlock Text="Select Area" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF"/>
                                                                        <TextBlock x:Name="hotKeySelectArea" Text="ALT+Q" FontSize="10" Foreground="#DDFFFFFF"/>
                                                                </StackPanel>
                                                        </Grid>
                                                </Border>

                                                <!-- Show Area -->
                                                <Border Background="#449945B0" CornerRadius="4" Margin="2" Padding="8" BorderBrush="#669945B0" BorderThickness="1">
                                                        <Border.ToolTip>
                                                                <ToolTip Content="Hiện/Ẩn đường viền màu đỏ xung quanh vùng đã chọn để dễ quan sát."/>
                                                        </Border.ToolTip>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="👁" FontSize="18" VerticalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                        <TextBlock Text="Show Area" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF"/>
                                                                        <TextBlock x:Name="hotKeyShowArea" Text="ALT+B" FontSize="10" Foreground="#DDFFFFFF"/>
                                                                </StackPanel>
                                                        </Grid>
                                                </Border>
                                        </UniformGrid>

                                        <!-- Area Clearing Hotkeys -->
                                        <TextBlock Text="Area Clearing" FontSize="16" FontWeight="Bold" Foreground="#AAFFFFFF" Margin="0,0,0,10"/>
                                        <UniformGrid Columns="2" Rows="1" Margin="0,0,0,20">
                                                <!-- Clear Areas -->
                                                <Border Background="#444577B0" CornerRadius="4" Margin="2" Padding="8" BorderBrush="#664577B0" BorderThickness="1">
                                                        <Border.ToolTip>
                                                                <ToolTip Content="Xóa tất cả các vùng đã chọn. Xóa toàn bộ danh sách vùng dịch."/>
                                                        </Border.ToolTip>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="🗑" FontSize="18" VerticalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                        <TextBlock Text="Clear Areas" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF"/>
                                                                        <TextBlock x:Name="hotKeyClearAreas" Text="ALT+R" FontSize="10" Foreground="#DDFFFFFF"/>
                                                                </StackPanel>
                                                        </Grid>
                                                </Border>

                                                <!-- Clear Selected Area -->
                                                <Border Background="#444577B0" CornerRadius="4" Margin="2" Padding="8" BorderBrush="#664577B0" BorderThickness="1">
                                                        <Border.ToolTip>
                                                                <ToolTip Content="Xóa vùng đang được chọn hiện tại. Chỉ xóa vùng đang active."/>
                                                        </Border.ToolTip>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0" Text="🎯" FontSize="18" VerticalAlignment="Center" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                        <TextBlock Text="Clear Selected" FontSize="12" FontWeight="Bold" Foreground="#FFFFFF"/>
                                                                        <TextBlock x:Name="hotKeyClearPreviousArea" Text="ALT+H" FontSize="10" Foreground="#DDFFFFFF"/>
                                                                </StackPanel>
                                                        </Grid>
                                                </Border>
                                        </UniformGrid>

                                        <!-- Quick Area Selection -->
